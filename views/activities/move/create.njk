{% extends "layouts/layout.njk" %}

{% block content %}
<div class="container mt-5">
  <div class="card shadow-lg p-4">
    <h2 class="text-center text-primary mb-4">Create Move Activity</h2>

    <form action="/api/move" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label fw-bold">Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label fw-bold">Description</label>
        <textarea class="form-control" id="description" name="description"></textarea>
      </div>
      <div class="mb-3">
        <label for="url" class="form-label fw-bold">Video URL</label>
        <input type="string" class="form-control" id="videoUrl" name="videoUrl" required>
      </div>
      <div class="mb-3">
        <label for="imagePlaceholder" class="form-label fw-bold">Image Placeholder URL</label>
        <input type="url" class="form-control" id="imagePlaceholder" name="imagePlaceholder" required>
      </div>
      
      <div class="d-grid">
        <button type="submit" class="btn btn-success">Create Activity</button>
      </div>
    </form>

    <div class="text-center mt-3">
      <a href="/activities/move" class="btn btn-outline-secondary">Back to Activities</a>
    </div>
  </div>
</div>
{% endblock %}