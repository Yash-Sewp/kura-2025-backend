{% extends "layouts/layout.njk" %}

{% block content %}
<div class="container mt-5">
  <h1 class="mb-4">Reflect Activities</h1>

  <!-- Add Activity Button -->
  <a href="/activities/reflect/create" class="btn btn-success mb-3">+ Add New Activity</a>

  {% if reflectActivities.length === 0 %}
    <div class="alert alert-warning">No reflect activities found.</div>
  {% else %}
    <div class="row">
      {% for activity in reflectActivities %}
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title">{{ activity.title }}</h5>
              <p class="card-text">{{ activity.description or "No description provided." }}</p>
              <p class="text-muted"><strong>Summary:</strong> {{ activity.summary or "N/A" }}</p>
              <a href="{{ activity.url }}" class="btn btn-primary" target="_blank">View More</a>
              <a href="/api/activities/reflect/edit/{{ activity.id }}" class="btn btn-warning btn-sm mx-1">Edit</a>
              <a href="/api/activities/reflect/delete/{{ activity.id }}" class="btn btn-danger btn-sm">Delete</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>
{% endblock %}